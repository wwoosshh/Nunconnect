<Window x:Class="chatapp.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="회원가입" Height="450" Width="300"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="아이디" Foreground="White" Margin="0,10,0,5"/>
        <TextBox x:Name="IdTextBox" Height="30" />

        <TextBlock Text="비밀번호" Foreground="White" Margin="0,10,0,5"/>
        <PasswordBox x:Name="PasswordBox" Height="30" />

        <TextBlock Text="닉네임" Foreground="White" Margin="0,10,0,5"/>
        <TextBox x:Name="NicknameTextBox" Height="30" />

        <TextBlock Text="이메일" Foreground="White" Margin="0,10,0,5"/>
        <TextBox x:Name="EmailTextBox" Height="30" />

        <Button x:Name="RegisterButton" Content="가입하기" Click="RegisterButton_Click"
                Height="40" Margin="0,20,0,0" Background="#00CED1" Foreground="Black"/>

        <Button x:Name="SendVerificationButton" Content="인증 메일 전송" 
                Click="SendVerificationButton_Click" Height="40" 
                Margin="0,10,0,0" Visibility="Collapsed"
                Background="#FF8C00" Foreground="White"/>

        <Button x:Name="LoginButton" Content="로그인" Click="LoginButton_Click" 
                Height="40" Margin="0,10,0,0" Visibility="Collapsed"
                Background="#32CD32" Foreground="White"/>
    </StackPanel>
</Window>
