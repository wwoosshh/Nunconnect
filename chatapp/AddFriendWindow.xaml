<Window x:Class="chatapp.AddFriendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="친구 추가" Height="200" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="ToolWindow" Background="#1e1e1e">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="친구 Index 입력" Foreground="White" FontSize="16" Margin="0,0,0,10"/>
        <TextBox x:Name="FriendIndexInput" Width="200" Height="30" FontSize="14"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="요청" Width="80" Margin="5,0" Click="RequestButton_Click"/>
            <Button Content="취소" Width="80" Margin="5,0" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
