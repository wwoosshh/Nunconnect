<Window x:Class="chatapp.ImageViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="이미지 뷰어" Height="600" Width="800" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 이미지 뷰어 -->
        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Image x:Name="ImageViewer" Stretch="None"/>
        </ScrollViewer>

        <!-- 하단 버튼 영역 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name="DownloadButton" Content="이미지 다운로드" Width="120" Height="30" Margin="5" Click="DownloadButton_Click"/>
            <Button x:Name="CloseButton" Content="닫기" Width="80" Height="30" Margin="5" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>