<Window x:Class="chatapp.ChatList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Chat" Height="800" Width="500"
        MinWidth="400" MinHeight="600"
        Icon="Ccon.ico"
        Background="#161717" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- 메뉴 항목 스타일 -->
        <Style x:Key="MenuItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#00CED1"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 슬라이드 인 애니메이션 -->
        <Storyboard x:Key="SlideInStoryboard">
            <ThicknessAnimation Storyboard.TargetName="SidePanel"
                                Storyboard.TargetProperty="Margin"
                                From="-200,0,0,0" To="0,0,0,0"
                                Duration="0:0:0.2"/>
        </Storyboard>

        <!-- 슬라이드 아웃 애니메이션 -->
        <Storyboard x:Key="SlideOutStoryboard">
            <ThicknessAnimation Storyboard.TargetName="SidePanel"
                                Storyboard.TargetProperty="Margin"
                                From="0,0,0,0" To="-200,0,0,0"
                                Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!-- 왼쪽 슬라이드 패널 -->
        <Grid x:Name="SidePanel" Background="#2F4F4F" Width="200"
              HorizontalAlignment="Left" Visibility="Collapsed"
              Margin="-200,0,0,0" ZIndex="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 닫기 버튼 -->
                <RowDefinition/>
                <!-- 메뉴 리스트 -->
            </Grid.RowDefinitions>

            <!-- 닫기 버튼 -->
            <DockPanel Grid.Row="0" HorizontalAlignment="Right" Margin="5">
                <Button Content="X" Width="25" Height="25"
                        Background="Transparent" Foreground="White"
                        BorderBrush="Transparent" Click="CloseSidePanel_Click"/>
            </DockPanel>

            <!-- 메뉴 항목 -->
            <StackPanel Grid.Row="1" Margin="10">
                <TextBlock Text="프로필" Style="{StaticResource MenuItemStyle}" MouseLeftButtonDown="OpenProfile_Click"/>
                <TextBlock Text="내 친구" Style="{StaticResource MenuItemStyle}" MouseLeftButtonDown="OpenFriend_Click"/>
                <TextBlock Text="채팅 목록" Style="{StaticResource MenuItemStyle}" MouseLeftButtonDown="OpenChatList_Click"/>
                <TextBlock Text="앱 설정" Style="{StaticResource MenuItemStyle}" MouseLeftButtonDown="OpenSettings_Click"/>
            </StackPanel>
        </Grid>

        <!-- 메인 컨텐츠 -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- 상단 -->
                <RowDefinition/>
                <!-- 채팅 내용 -->
                <RowDefinition Height="Auto"/>
                <!-- 입력창 -->
            </Grid.RowDefinitions>

            <!-- 상단바 -->
            <DockPanel Grid.Row="0" Background="#020202">
                <Button Content="☰" Width="40" Height="40" Margin="10"
                        Background="Transparent" Foreground="White" BorderBrush="Transparent"
                        Click="ToggleSidePanel_Click"/>
                <TextBlock x:Name="UserNameTextBlock"
                           Text="로그인 사용자"
                           FontSize="18" Foreground="White"
                           VerticalAlignment="Center" Margin="10,0,0,0"/>
            </DockPanel>

            <!-- 채팅 표시 영역 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Name="ChatScrollViewer">
                <StackPanel x:Name="ChatStack" Margin="10" />
            </ScrollViewer>

            <!-- 하단 입력창 -->
            <Grid Grid.Row="2" Background="#353535" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- + 버튼 -->
                    <ColumnDefinition Width="*"/>
                    <!-- 입력창 -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- 전송 버튼 -->
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="＋" Width="40" Height="40" Margin="0,0,10,0"
                        Background="#919191" Foreground="Black"
                        Click="FileAddButton_Click"/>

                <TextBox Grid.Column="1" x:Name="MessageInput" FontSize="14" Padding="10"
                         Background="#353535" Foreground="White" BorderBrush="Transparent"
                         Height="40" VerticalAlignment="Center"/>

                <Button Grid.Column="2" Content="전송" Width="60" Height="40" Margin="10,0,0,0"
                        Background="#353535" Foreground="Black"
                        Click="SendButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
