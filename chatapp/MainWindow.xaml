<Window x:Class="chatapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect"
        Height="800" Width="500"
        WindowStartupLocation="CenterScreen"
        Icon="Ccon.ico"
        ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#270c44" Offset="0" />
            <GradientStop Color="#7f1a93" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <!-- 상단: 앱 이름 / 버전 -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Connect" FontSize="30" FontWeight="Bold" Foreground="#00CED1" TextAlignment="Center" Margin="0,10,0,10"/>
            <TextBlock Text="1.4.0 ver" FontSize="16" Foreground="#AFEEEE" TextAlignment="Center"/>
        </StackPanel>

        <!-- 하단: 로그인 박스 -->
        <StackPanel Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="300" Margin="0,0,0,50">

            <!-- 아이디 입력 -->
            <Grid>
                <TextBox x:Name="IdTextBox" FontSize="14" Padding="10"
                         Background="#008B8B" Foreground="White" BorderBrush="Transparent" KeyDown="InputBox_KeyDown"/>
                <TextBlock x:Name="IdHint" Text="아이디" FontSize="14" Foreground="White"
                           Margin="12,10,0,0" IsHitTestVisible="False"
                           VerticalAlignment="Top" Visibility="Visible"/>
            </Grid>

            <!-- 비밀번호 입력 -->
            <Grid Margin="0,15,0,0">
                <PasswordBox x:Name="PasswordBox" FontSize="14" Padding="10"
                             Background="#008B8B" Foreground="White" BorderBrush="Transparent" KeyDown="InputBox_KeyDown"/>
                <TextBlock x:Name="PasswordHint" Text="비밀번호" FontSize="14" Foreground="White"
                           Margin="12,10,0,0" IsHitTestVisible="False"
                           VerticalAlignment="Top" Visibility="Visible"/>
            </Grid>

            <!-- 로그인 버튼 -->
            <Button Content="로그인" FontSize="16" Padding="10" Margin="0,20,0,10"
                    Background="#00CED1" Foreground="Black" Click="LoginButton_Click"/>

            <!-- 회원가입 버튼 -->
            <Button Content="회원가입" FontSize="12" Padding="10"
                    Background="Transparent" Foreground="#AFEEEE" BorderBrush="#AFEEEE"
                    Click="SignupButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
