<Window x:Class="chatapp.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="Ccon.ico"
        Title="프로필 설정" Height="800" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#7B8B97" ResizeMode="NoResize" WindowStyle="None">

    <Grid>
        <!-- 상단바 -->
        <Grid Height="50" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="취소" Grid.Column="0" HorizontalAlignment="Left" Margin="15,10,0,0"
                    Background="Transparent" Foreground="White" FontSize="14"
                    BorderThickness="0" Click="Cancel_Click"/>
            <Button Content="완료" Grid.Column="2" HorizontalAlignment="Right" Margin="0,10,15,0"
                    Background="Transparent" Foreground="White" FontSize="14"
                    BorderThickness="0" Click="Save_Click"/>
        </Grid>

        <!-- 휴지통 아이콘 (중앙) -->
        <Image Source="Assets/trash.png" Width="24" Height="24" HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <!-- 프로필 사진 -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid Width="100" Height="100">
                <Ellipse Fill="LightSlateGray"/>
                <Image x:Name="ProfileImage" Stretch="Fill" ClipToBounds="True"/>
                <Button Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Margin="0,0,-10,-10" Click="ChangePhoto_Click"
                        Background="White" BorderBrush="Transparent" Content="📷"/>
            </Grid>

            <!-- 이름 설정 -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="○" FontSize="20" Foreground="White"/>
                <TextBox x:Name="UserNameBox" Width="150" FontSize="20" BorderBrush="Transparent"
                         Background="Transparent" Foreground="White" TextAlignment="Center" Text="사용자 이름"/>
                <Button Content="✏" Width="24" Height="24" Margin="5,0,0,0"
                        Background="Transparent" Foreground="White" BorderThickness="0"/>
            </StackPanel>

            <!-- 상태 메시지 -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBox x:Name="StatusMessageBox" Width="250" FontSize="14"
                         Background="Transparent" Foreground="White" TextAlignment="Center" BorderBrush="Transparent"
                         Text="2023.09.18~2025.03.1"/>
                <Button Content="✏" Width="24" Height="24" Margin="5,0,0,0"
                        Background="Transparent" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>

        <!-- 하단 메뉴 (구현 예정) -->
        <DockPanel VerticalAlignment="Bottom" Height="60" Background="#7B8B97" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Width="40" Height="40" Margin="10" Background="Transparent" BorderThickness="0">
                    <Image Source="Assets/camera_icon.png" Stretch="Uniform"/>
                </Button>
                <Button Width="40" Height="40" Margin="10" Background="Transparent" BorderThickness="0">
                    <Image Source="Assets/star_icon.png" Stretch="Uniform"/>
                </Button>
                <Button Width="40" Height="40" Margin="10" Background="Transparent" BorderThickness="0">
                    <Image Source="Assets/hand_icon.png" Stretch="Uniform"/>
                </Button>
                <Button Width="40" Height="40" Margin="10" Background="Transparent" BorderThickness="0">
                    <Image Source="Assets/text_icon.png" Stretch="Uniform"/>
                </Button>
                <Button Width="40" Height="40" Margin="10" Background="Transparent" BorderThickness="0">
                    <Image Source="Assets/calendar_icon.png" Stretch="Uniform"/>
                </Button>
                <Button Width="40" Height="40" Margin="10" Background="Transparent" BorderThickness="0">
                    <Image Source="Assets/music_icon.png" Stretch="Uniform"/>
                </Button>
                <Button Width="40" Height="40" Margin="10" Background="Transparent" BorderThickness="0">
                    <Image Source="Assets/smile_icon.png" Stretch="Uniform"/>
                </Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
