<Window x:Class="chatapp.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="채팅방" Height="800" Width="500"
        Icon="Ccon.ico"
        Background="#121112" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- 메뉴 항목 스타일 -->
        <Style x:Key="MenuItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#00CED1"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 슬라이드 인 애니메이션 -->
        <Storyboard x:Key="SlideInStoryboard">
            <ThicknessAnimation Storyboard.TargetName="SidePanel"
                            Storyboard.TargetProperty="Margin"
                            From="-200,0,0,0" To="0,0,0,0"
                            Duration="0:0:0.2"/>
        </Storyboard>

        <!-- 슬라이드 아웃 애니메이션 -->
        <Storyboard x:Key="SlideOutStoryboard">
            <ThicknessAnimation Storyboard.TargetName="SidePanel"
                            Storyboard.TargetProperty="Margin"
                            From="0,0,0,0" To="-200,0,0,0"
                            Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!-- 왼쪽 슬라이드 패널 -->
        <Grid x:Name="SidePanel" Background="#2F4F4F" Width="200"
          HorizontalAlignment="Left" Visibility="Collapsed"
          Margin="-200,0,0,0" ZIndex="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 닫기 버튼 -->
                <RowDefinition/>
                <!-- 메뉴 리스트 -->
            </Grid.RowDefinitions>

            <!-- 닫기 버튼 -->
            <DockPanel Grid.Row="0" HorizontalAlignment="Right" Margin="5">
                <Button Content="X" Width="25" Height="25"
                    Background="Transparent" Foreground="White"
                    BorderBrush="Transparent" Click="CloseSidePanel_Click"/>
            </DockPanel>

            <!-- 메뉴 항목 -->
            <StackPanel Grid.Row="1" Margin="10">
                <TextBlock Text="프로필" Style="{StaticResource MenuItemStyle}" MouseLeftButtonDown="OpenProfile_Click"/>
                <TextBlock Text="내 친구" Style="{StaticResource MenuItemStyle}" MouseLeftButtonDown="OpenFriend_Click"/>
                <TextBlock Text="채팅 목록" Style="{StaticResource MenuItemStyle}" MouseLeftButtonDown="OpenChatList_Click"/>
                <TextBlock Text="앱 설정" Style="{StaticResource MenuItemStyle}" MouseLeftButtonDown="OpenSettings_Click"/>
            </StackPanel>
        </Grid>


        <Grid Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 상단 -->
            <DockPanel Grid.Row="0" Background="#020202">
                    <Button Content="☰" Width="40" Background="Transparent" Foreground="White" FontSize="16"
                        Click="ToggleSidePanel_Click" Margin="10,0,0,0"/>
                    <TextBlock x:Name="RoomTitleText" FontSize="18" Foreground="White"
                           VerticalAlignment="Center" Margin="20,0,0,0"/>
                </DockPanel>

                <!-- 채팅 표시 영역 -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Name="ChatScrollViewer">
                    <StackPanel x:Name="ChatStack" Margin="10"/>
                </ScrollViewer>

                <!-- 입력 영역 -->
            <Grid Grid.Row="2" Background="#353535" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                <Button Content="📷 사진 전송" Click="SendImageButton_Click" />
                <TextBox Grid.Column="1" x:Name="MessageInput"
                        FontSize="14" Padding="10"
                        Background="#353535" Foreground="White" BorderBrush="Transparent"
                        MinHeight="40" TextWrapping="Wrap" AcceptsReturn="True"
                        VerticalAlignment="Center"
                        PreviewKeyDown="MessageInput_PreviewKeyDown"/>
                
                <Button Grid.Column="2" Content="전송" Width="60" Height="40" Margin="10,0,0,0"
                        Background="#353535" Foreground="Black" Click="SendButton_Click"/>
                </Grid>
            </Grid>
    </Grid>
</Window>
